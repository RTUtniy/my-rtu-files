\hh{Varbūtības definīcijas}\\[.5em]
\textbf{1) Klasiskā varbūtības definīcija}\\
\text{Pieņemsim, ka vienlīdz iespējamo notikumu skaits ir }n\text.\\
\text{Notikumam }A\text{ \underline{labvēlīgo gadījumu} skaits ir }m~(m\le n)\text.\\
\text{Tad notikuma }A\text{ varbūtību }P(A)\text{ definē šādi: } P(A)=\frac mn,0 \le P(A) \le 1\\[.5em]

\textbf{Piemērs:}\\
\text{Grupā ir 25 studenti, no kuriem 10 ie saņēmuši 9 balles matemātikā.}\\
\text{Noteikt varbūtību, ka no šis grupas nejauši izvēlētajam studentam ir 9 matemātikā.}\\
P(A)=\frac mn=\frac{10}{25}=0,4\\[.5em]

\textbf{Piemērs:}\\
\text{Laboratorijā ir 16 datori. Uz sešiem no tiem instalēta R programmatūra.}\\
\text{Ja 5 datori ir nejauši izvēlēti pārbaudei, kāda ir varbūtība, ka nevienam no tiem nav R?}\\
n=C^5_{16}=\frac{16!}{5!(16-5)!}\\
m=C^5_{10}=\frac{10!}{5!(10-5)!}\\
P(A)=\frac mn \approx 0,06\\[.5em]

\textbf{2) Varbūtības ģeometriskā definīcija}\\
S_1\subset S_0\Rarr P(A)=\frac{S_1}{S_0}\\
\textbf{Piemērs:}\\
\text{Pieņemsim, ka skaitlis }x\text{ ir nejauši izvēlēts intervālā }(1,2)\text{, bet skaitlis }y\\
\text{ir nejauši izvēlēts intervālā }(0,2)\text{. Kāda ir varbūtība, ka }x<y\text?\\
\comt{Var izveidot grafiku }\com{y=x}\comt{, uz tā uzzīmēt laukumus un mahinēt ar tiem.}\\[1em]

\hh{Vienkāršākās darbības ar varbūtībām}\\

\textbf{1) Nesavienojamu notikumu summas varbūtība}\\
\text{Nesavienojamiem notikumiem }P(A+B)=P(A)+P(B)~~~~~~(A\cap B=\varnothing)\\
\textbf{2) Pilnas nensavienojamo notikumu sistēmas varbūtība}\\
\text{Ja }A_1, A_2, ...~A_n\text{ ir pilna nesavienojamu notikumu sistēma, tad}\sum_{i=1}^nP(A_i)=1\\
\textbf{3) Pretējo notikumu varbūtības}\\
P(A)+P(\overline A)=1,~~~~~1-P(\overline A)=P(A)\\
P(A)=1-P(\overline A)=1-P(A_2)-P(A_3)-...-P(A_n)\\
\textbf{4) Neatkarīgu notikumu reizinājumu varbūtība}\\
P(AB)=P(A)P(B)\\[1em]

\h{Darbības ar savstarp. atkar. notik. varb.}\\
\hh{Nosacītā varbūtība}\\
